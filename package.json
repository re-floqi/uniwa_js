{
  "name": "uniwa_js",
  "version": "1.0.0",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "npm install --legacy-peer-deps && rollup -c",  // Προσθήκη legacy-peer-deps για να παρακάμψει την σύγκρουση
    "start": "sirv public --single"
  },
  "devDependencies": {
    "rollup": "^3.0.0",  // Χρησιμοποιούμε Rollup 3.x για την υποστήριξη νέων plugins
    "rollup-plugin-css-only": "^4.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "@rollup/plugin-terser": "^1.0.0",  // Χρησιμοποιούμε το νέο terser plugin που είναι συμβατό με Rollup 3.x
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "sirv-cli": "^2.0.0"
  },
  "engines": {
    "node": "16.x"  // Χρησιμοποιούμε Node.js έκδοση 16.x για να είναι συμβατή με τα εξαρτήματα
  }
}
